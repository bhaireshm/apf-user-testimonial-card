{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "react",
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["DOM", "ES2020"],
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
  },
  "include": ["./src/publish.js", "./package.json"],
  "exclude": ["build", "dist", "node_modules"]
}
